---
import ToolShell from '../../../components/common/ToolShell.astro';
import { apiRateLimiterCalculatorTool } from '../../../tools/network/api-rate-limiter-calculator';

const tool = apiRateLimiterCalculatorTool;
---

<ToolShell tool={tool}>
  <div id="api-rate-limiter-calculator-root"></div>
  
  <script>
    import('../../../components/tools/network/ApiRateLimiterCalculator').then(module => {
      const { ApiRateLimiterCalculator } = module;
      const root = document.getElementById('api-rate-limiter-calculator-root');
      if (root) {
        const React = (window as any).React;
        const ReactDOM = (window as any).ReactDOM;
        ReactDOM.render(React.createElement(ApiRateLimiterCalculator), root);
      }
    });
  </script>
</ToolShell>