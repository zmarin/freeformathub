---
import ToolShell from '../../../components/common/ToolShell.astro';
import { BASE32_ENCODER_TOOL } from '../../../tools/encoders/base32-encoder';

const tool = BASE32_ENCODER_TOOL;
---

<ToolShell {tool}>
  <div id="base32-encoder-container"></div>
  <script>
    import('../../../components/tools/encoders/Base32Encoder').then((module) => {
      const Base32Encoder = module.default;
      const container = document.getElementById('base32-encoder-container');
      if (container) {
        import('react').then((React) => {
          import('react-dom/client').then((ReactDOM) => {
            const root = ReactDOM.createRoot(container);
            root.render(React.createElement(Base32Encoder));
          });
        });
      }
    });
  </script>
</ToolShell>