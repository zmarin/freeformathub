---
import BaseLayout from '../../layouts/BaseLayout.astro';

const baseUrl = 'https://freeformathub.com';

// Enhanced structured data for comparison page
const comparisonSchema = {
  "@context": "https://schema.org",
  "@type": "ComparisonPage",
  "name": "JSON Formatter vs XML Formatter - Complete Comparison 2025",
  "description": "Detailed comparison between JSON and XML formatters. Compare features, performance, use cases, and choose the best data formatting tool for your needs.",
  "url": `${baseUrl}/compare/json-formatter-vs-xml-formatter`,
  "author": {
    "@type": "Organization",
    "name": "FreeFormatHub",
    "url": baseUrl
  },
  "datePublished": "2024-01-01",
  "dateModified": new Date().toISOString().split('T')[0],
  "mainEntity": [
    {
      "@type": "SoftwareApplication",
      "name": "JSON Formatter",
      "description": "Format, validate, and beautify JSON data with syntax highlighting",
      "url": `${baseUrl}/formatters/json-formatter`,
      "applicationCategory": "DeveloperApplication"
    },
    {
      "@type": "SoftwareApplication",
      "name": "XML Formatter",
      "description": "Format, validate, and beautify XML markup with error detection",
      "url": `${baseUrl}/formatters/xml-formatter`,
      "applicationCategory": "DeveloperApplication"
    }
  ]
};

const faqSchema = {
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "When should I use JSON formatter vs XML formatter?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Use JSON formatter for APIs, configuration files, and modern web applications. Use XML formatter for legacy systems, SOAP services, and document markup. JSON is simpler and more lightweight, while XML offers more features like attributes and namespaces."
      }
    },
    {
      "@type": "Question",
      "name": "Which is better for web APIs - JSON or XML?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "JSON is generally better for web APIs due to smaller payload size, faster parsing, and native JavaScript support. Most modern REST APIs use JSON. XML is still used in enterprise SOAP services and when you need advanced features like schema validation."
      }
    },
    {
      "@type": "Question",
      "name": "Are JSON and XML formatters free to use?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, both JSON and XML formatters on FreeFormatHub are completely free with no registration required. All processing happens locally in your browser for maximum privacy and security."
      }
    }
  ]
};

const jsonLd = {
  "@context": "https://schema.org",
  "@graph": [comparisonSchema, faqSchema]
};
