---
import BaseLayout from '../layouts/BaseLayout.astro';
// Populate tool registry for curated and trending sections
import '../lib/tools/index';
import { TOOL_CATEGORIES, getToolsByCategory, getCategory, getTool } from '../lib/tools/registry';
import ToolCategories from '../components/ui/ToolCategories.tsx';
import ToolSearch from '../components/ui/ToolSearch.tsx';
import AdPlacement from '../components/ads/AdPlacement.astro';

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "FreeFormatHub",
  "description": "Free online developer tools for formatting, converting, and validating data. Zero friction tools that just work.",
  "applicationCategory": "DeveloperApplication",
  "operatingSystem": "Any",
  "permissions": "no-storage",
  "isAccessibleForFree": true,
  "author": {
    "@type": "Organization",
    "name": "FreeFormatHub"
  }
};

const curatedCategoryId = 'formatters';
const curatedCategory = getCategory(curatedCategoryId);
const curatedTools = getToolsByCategory(curatedCategoryId).slice(0, 6);

const curatedEncoders = getCategory('encoders');
const curatedEncodersTools = getToolsByCategory('encoders').slice(0, 6);

const curatedConverters = getCategory('converters');
const curatedConvertersTools = getToolsByCategory('converters').slice(0, 6);

// Hand-picked trending tools (by id)
const trendingIds = [
  'json-formatter',
  'base64-encoder',
  'url-encoder',
  'jwt-decoder',
  'csv-formatter',
  'xml-formatter',
  'yaml-formatter',
  'js-beautifier',
  'html-beautifier',
  'sql-formatter',
  'text-case-converter',
  'color-converter'
];
const trendingTools = trendingIds
  .map((id) => getTool(id))
  .filter((t) => !!t)
  .slice(0, 8);
---

<BaseLayout 
  title="FreeFormatHub - Free Online Developer Tools"
  description="Free online developer tools for formatting, converting, encoding, and validating data. JSON formatter, Base64 encoder, URL decoder, and more. Zero friction tools that just work."
  keywords={['developer tools', 'json formatter', 'base64 encoder', 'url decoder', 'online tools', 'free tools']}
  jsonLd={jsonLd}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-gray-900 dark:to-gray-800 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6">
        Free Developer Tools
