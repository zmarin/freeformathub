---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getAllTools } from '../lib/tools/registry';

const title = 'Free Password & Security Tools Online - Generate, Check & Secure Passwords';
const description = 'Professional password and security tools. Generate strong passwords, check password strength, create encryption keys, and more. 100% secure and private.';

// Get all security/crypto/password related tools
const securityTools = getAllTools().filter(tool =>
  tool.category.id === 'crypto' ||
  (tool.keywords && tool.keywords.some(keyword =>
    ['password', 'security', 'encryption', 'hash', 'crypto', 'secure'].some(secKeyword =>
      keyword.toLowerCase().includes(secKeyword)
    )
  ))
);

const featuredSecurityTools = [
  'password-generator',
  'password-strength-checker',
  'password-policy-generator',
  'hash-generator',
  'encryption-tool',
  'jwt-generator',
  'jwt-decoder',
  'file-hash-integrity-checker'
];

const featuredTools = featuredSecurityTools.map(id =>
  securityTools.find(tool => tool.id === id)
).filter(Boolean);

const otherSecurityTools = securityTools.filter(tool =>
  !featuredSecurityTools.includes(tool.id)
);

const securityCategories = [
  {
    title: 'Password Tools',
    icon: 'üîê',
    description: 'Generate, validate, and analyze password security',
    tools: securityTools.filter(tool =>
      ['password-generator', 'password-strength-checker', 'password-policy-generator'].includes(tool.id)
    )
  },
  {
    title: 'Encryption & Hashing',
    icon: 'üõ°Ô∏è',
    description: 'Encrypt data and generate secure hashes',
    tools: securityTools.filter(tool =>
      ['hash-generator', 'encryption-tool', 'file-hash-integrity-checker'].includes(tool.id)
    )
  },
  {
    title: 'Token & JWT Tools',
    icon: 'üé´',
    description: 'Generate and decode security tokens',
    tools: securityTools.filter(tool =>
      ['jwt-generator', 'jwt-decoder'].includes(tool.id)
    )
  }
];
---

<BaseLayout title={title} description={description}>
  <main class="container mx-auto px-4 py-8">
    {/* Hero Section */}
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Free Password & Security Tools
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
        Security chores pop up mid‚Äësprint ‚Äî you need a strong password, a quick hash, or to sanity‚Äëcheck a token.
        The password generator, password strength checker, hash generator, and JWT decoder all run client‚Äëside,
        so you can work safely without sending secrets anywhere.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <div class="bg-red-100  text-red-800  px-4 py-2 rounded-lg border border-red-200">
          <span class="font-semibold">{securityTools.length}+</span> Security Tools
        </div>
        <div class="bg-green-100  text-green-800  px-4 py-2 rounded-lg border border-green-200">
          Military-Grade Security
        </div>
        <div class="bg-blue-100  text-blue-800  px-4 py-2 rounded-lg border border-blue-200">
          Zero Data Collection
        </div>
      </div>
    </div>

    {/* Security Warning */}
    <div class="bg-amber-50  border border-amber-200  rounded-lg p-6 mb-12">
      <div class="flex items-start">
        <div class="w-8 h-8 bg-amber-100  rounded-lg flex items-center justify-center mr-4 mt-1 border border-amber-200">
          <span class="text-lg">‚ö†Ô∏è</span>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-amber-900  mb-2">Security Notice</h3>
          <p class="text-amber-800">
            All security tools process data locally in your browser. No passwords, keys, or sensitive data
            are transmitted over the internet. For maximum security with critical passwords, consider using
            offline tools or dedicated password managers.
          </p>
        </div>
      </div>
    </div>

    {/* Featured Security Tools */}
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
        Essential Security Tools
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {featuredTools.map((tool) => (
          <a href={`/${tool.category.id}/${tool.slug}`}
             class="block p-6 bg-white  border border-gray-200  rounded-lg shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-center mb-3">
              <span class="text-2xl mr-3">{tool.icon}</span>
              <h3 class="text-lg font-semibold text-gray-900 line-clamp-2">
                {tool.name.replace(/ - .*$/, '')}
              </h3>
            </div>
            <p class="text-gray-600 text-sm line-clamp-3 mb-4">
              {tool.description}
            </p>
            <div class="flex flex-wrap gap-1">
              {tool.keywords && tool.keywords.slice(0, 3).map((keyword) => (
                <span class="inline-block bg-gray-100  text-gray-700  text-xs px-2 py-1 rounded">
                  {keyword}
                </span>
              ))}
            </div>
          </a>
        ))}
      </div>
    </section>

    {/* Security Tool Categories */}
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
        Security Tools by Category
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {securityCategories.map((category) => (
          <div class="bg-white  border border-gray-200  rounded-lg p-6">
            <div class="flex items-center mb-4">
              <span class="text-2xl mr-3">{category.icon}</span>
              <div>
                <h3 class="text-xl font-semibold text-gray-900">{category.title}</h3>
                <p class="text-gray-600 text-sm">{category.description}</p>
              </div>
            </div>
            <div class="space-y-3">
              {category.tools.map((tool) => (
                <a href={`/${tool.category.id}/${tool.slug}`}
                   class="block p-3 bg-gray-50  rounded-lg hover:bg-gray-100  transition-colors">
                  <div class="flex items-center">
                    <span class="text-lg mr-3">{tool.icon}</span>
                    <div>
                      <h4 class="font-medium text-gray-900">
                        {tool.name.replace(/ - .*$/, '')}
                      </h4>
                      <p class="text-gray-600 text-sm line-clamp-1">
                        {tool.description}
                      </p>
                    </div>
                  </div>
                </a>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    {/* Password Security Best Practices */}
    <section class="mb-16 bg-gray-50  rounded-lg p-8 border border-gray-200">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
        Password Security Best Practices
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-white  p-6 rounded-lg border border-gray-200">
          <h3 class="text-xl font-semibold text-green-700  mb-4 flex items-center">
            <span class="mr-2">‚úÖ</span> Do These
          </h3>
          <ul class="space-y-3 text-gray-700">
            <li class="flex items-start">
              <span class="text-green-500 mr-2 mt-1">‚Ä¢</span>
              Use unique passwords for every account
            </li>
            <li class="flex items-start">
              <span class="text-green-500 mr-2 mt-1">‚Ä¢</span>
              Create passwords with 12+ characters
            </li>
            <li class="flex items-start">
              <span class="text-green-500 mr-2 mt-1">‚Ä¢</span>
              Include uppercase, lowercase, numbers, and symbols
            </li>
            <li class="flex items-start">
              <span class="text-green-500 mr-2 mt-1">‚Ä¢</span>
              Use a reputable password manager
            </li>
            <li class="flex items-start">
              <span class="text-green-500 mr-2 mt-1">‚Ä¢</span>
              Enable two-factor authentication (2FA)
            </li>
            <li class="flex items-start">
              <span class="text-green-500 mr-2 mt-1">‚Ä¢</span>
              Change passwords immediately if breached
            </li>
          </ul>
        </div>
        <div class="bg-white  p-6 rounded-lg border border-gray-200">
          <h3 class="text-xl font-semibold text-red-700  mb-4 flex items-center">
            <span class="mr-2">‚ùå</span> Avoid These
          </h3>
          <ul class="space-y-3 text-gray-700">
            <li class="flex items-start">
              <span class="text-red-500 mr-2 mt-1">‚Ä¢</span>
              Reusing passwords across multiple accounts
            </li>
            <li class="flex items-start">
              <span class="text-red-500 mr-2 mt-1">‚Ä¢</span>
              Using personal information (names, dates)
            </li>
            <li class="flex items-start">
              <span class="text-red-500 mr-2 mt-1">‚Ä¢</span>
              Simple patterns (123456, password, qwerty)
            </li>
            <li class="flex items-start">
              <span class="text-red-500 mr-2 mt-1">‚Ä¢</span>
              Storing passwords in plain text files
            </li>
            <li class="flex items-start">
              <span class="text-red-500 mr-2 mt-1">‚Ä¢</span>
              Sharing passwords via email or messaging
            </li>
            <li class="flex items-start">
              <span class="text-red-500 mr-2 mt-1">‚Ä¢</span>
              Using passwords shorter than 8 characters
            </li>
          </ul>
        </div>
      </div>
    </section>

    {/* Security Features */}
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
        Why Our Security Tools Are Trusted
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-red-100  rounded-lg flex items-center justify-center mx-auto mb-4 border border-red-200">
            <span class="text-2xl">üîí</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-3">100% Offline</h3>
          <p class="text-gray-600 text-sm">
            All encryption and password generation happens locally. Zero network transmission.
          </p>
        </div>
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-blue-100  rounded-lg flex items-center justify-center mx-auto mb-4 border border-blue-200">
            <span class="text-2xl">üõ°Ô∏è</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Cryptographically Secure</h3>
          <p class="text-gray-600 text-sm">
            Uses browser's secure random number generation for true randomness.
          </p>
        </div>
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-green-100  rounded-lg flex items-center justify-center mx-auto mb-4 border border-green-200">
            <span class="text-2xl">üëÅÔ∏è</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Open Source</h3>
          <p class="text-gray-600 text-sm">
            Security algorithms are transparent and auditable by security experts.
          </p>
        </div>
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-purple-100  rounded-lg flex items-center justify-center mx-auto mb-4 border border-purple-200">
            <span class="text-2xl">üö´</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-3">No Data Collection</h3>
          <p class="text-gray-600 text-sm">
            We never see, store, or collect your passwords or sensitive information.
          </p>
        </div>
      </div>
    </section>

    {/* FAQ Section */}
    <section class="bg-gray-50  rounded-lg p-8 border border-gray-200">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
        Security Tools FAQ
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="space-y-6">
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
              How secure are online password generators?
            </h3>
            <p class="text-gray-600">
              Our password generator is completely secure because it runs locally in your browser. No passwords are transmitted over the internet or stored on our servers.
            </p>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
              Can I trust these tools for sensitive passwords?
            </h3>
            <p class="text-gray-600">
              Yes, all security tools process data locally. However, for maximum security with critical passwords, consider using offline tools or dedicated password managers.
            </p>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
              What makes a password strong?
            </h3>
            <p class="text-gray-600">
              Strong passwords are long (12+ characters), use mixed character types, avoid dictionary words, and are unique for each account. Our strength checker analyzes all these factors.
            </p>
          </div>
        </div>
        <div class="space-y-6">
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
              How often should I change passwords?
            </h3>
            <p class="text-gray-600">
              Change passwords immediately if there's a breach, every 90 days for high-security accounts, or annually for regular accounts. Focus on using unique, strong passwords.
            </p>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
              Are these tools better than password managers?
            </h3>
            <p class="text-gray-600">
              These tools complement password managers. Use our generators for one-time password creation, but use a dedicated password manager for storing and managing passwords long-term.
            </p>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
              Can I use these tools offline?
            </h3>
            <p class="text-gray-600">
              Yes, once loaded, all security tools work completely offline. This ensures maximum security since no data can be transmitted even if you wanted to.
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .line-clamp-1 {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
