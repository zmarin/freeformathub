---
import BaseLayout from '../layouts/BaseLayout.astro';

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": "Contact FreeFormatHub",
  "description": "Get in touch with FreeFormatHub for support, feedback, business inquiries, or tool suggestions. Privacy-first developer tools support team.",
  "url": "https://freeformathub.com/contact",
  "isPartOf": {
    "@type": "WebSite",
    "name": "FreeFormatHub",
    "url": "https://freeformathub.com"
  },
  "mainEntity": {
    "@type": "Organization",
    "name": "FreeFormatHub",
    "url": "https://freeformathub.com",
    "contactPoint": [
      {
        "@type": "ContactPoint",
        "contactType": "customer service",
        "email": "hello@freeformathub.com",
        "description": "General inquiries and support"
      },
      {
        "@type": "ContactPoint",
        "contactType": "technical support",
        "email": "support@freeformathub.com",
        "description": "Technical support and bug reports"
      },
      {
        "@type": "ContactPoint",
        "contactType": "sales",
        "email": "business@freeformathub.com",
        "description": "Business partnerships and advertising"
      }
    ],
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Split",
      "addressCountry": "Croatia",
      "addressRegion": "EU"
    }
  }
};
---

<BaseLayout
  title="Contact FreeFormatHub"
  description="Get in touch with FreeFormatHub team for support, feedback, business inquiries, or tool suggestions. We respond to all messages promptly."
  keywords={['contact freeformathub', 'support', 'feedback', 'business inquiries', 'developer tools support']}
  jsonLd={jsonLd}
>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="prose prose-lg dark:prose-invert max-w-none">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-8">Contact Us</h1>

      <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
        We'd love to hear from you! Whether you have questions, feedback, suggestions for new tools, or need support, we're here to help.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
        <section class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-6">
          <h2 class="text-2xl font-semibold text-blue-900 dark:text-blue-100 mb-4">
            üí¨ General Inquiries
          </h2>
          <p class="text-blue-800 dark:text-blue-200 mb-4">
            Questions about our tools, feature requests, or general feedback.
          </p>
          <a href="mailto:hello@freeformathub.com" class="inline-flex items-center text-blue-600 hover:text-blue-500 font-medium">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            hello@freeformathub.com
          </a>
        </section>

        <section class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-6">
          <h2 class="text-2xl font-semibold text-red-900 dark:text-red-100 mb-4">
            üõ†Ô∏è Technical Support
          </h2>
          <p class="text-red-800 dark:text-red-200 mb-4">
            Bug reports, technical issues, or problems with specific tools.
          </p>
          <a href="mailto:support@freeformathub.com" class="inline-flex items-center text-red-600 hover:text-red-500 font-medium">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            support@freeformathub.com
          </a>
        </section>

        <section class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-6">
          <h2 class="text-2xl font-semibold text-green-900 dark:text-green-100 mb-4">
            üè¢ Business Inquiries
          </h2>
          <p class="text-green-800 dark:text-green-200 mb-4">
            Partnerships, advertising opportunities, or business collaborations.
          </p>
          <a href="mailto:business@freeformathub.com" class="inline-flex items-center text-green-600 hover:text-green-500 font-medium">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            business@freeformathub.com
          </a>
        </section>

        <section class="bg-purple-50 dark:bg-purple-900/20 border border-purple-200 dark:border-purple-800 rounded-lg p-6">
          <h2 class="text-2xl font-semibold text-purple-900 dark:text-purple-100 mb-4">
            üîí Privacy & Legal
          </h2>
          <p class="text-purple-800 dark:text-purple-200 mb-4">
            Privacy rights, GDPR requests, or legal matters.
          </p>
          <a href="mailto:privacy@freeformathub.com" class="inline-flex items-center text-purple-600 hover:text-purple-500 font-medium">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            privacy@freeformathub.com
          </a>
        </section>
      </div>

      <section class="mb-8">
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-4">Frequently Asked Questions</h2>

        <div class="space-y-6">
          <div class="border-l-4 border-blue-500 pl-4">
            <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-2">
              How quickly do you respond to emails?
            </h3>
            <p class="text-gray-700 dark:text-gray-300">
              We aim to respond to all emails within 24-48 hours during business days. Technical support issues are prioritized and typically answered within 24 hours.
            </p>
          </div>

          <div class="border-l-4 border-green-500 pl-4">
            <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-2">
              Can you add a specific tool I need?
            </h3>
            <p class="text-gray-700 dark:text-gray-300">
              Absolutely! We love hearing tool suggestions from our users. Send us details about what tool you need and how it would help your workflow. We regularly add new tools based on user feedback.
            </p>
          </div>

          <div class="border-l-4 border-purple-500 pl-4">
            <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-2">
              Do you offer enterprise solutions?
            </h3>
            <p class="text-gray-700 dark:text-gray-300">
              While our tools are designed to be privacy-first and work offline, we're open to discussing enterprise needs, custom integrations, or white-label solutions. Contact our business team for more information.
            </p>
          </div>

          <div class="border-l-4 border-red-500 pl-4">
            <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-2">
              I found a bug or issue with a tool. What should I do?
            </h3>
            <p class="text-gray-700 dark:text-gray-300">
              Please email our technical support team with details about the issue, including which tool you were using, what you expected to happen, and what actually happened. Screenshots or sample data (if not sensitive) are very helpful.
            </p>
          </div>
        </div>
      </section>

      <section class="mb-8">
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-4">What to Include in Your Message</h2>
        <p class="text-gray-700 dark:text-gray-300 mb-4">
          To help us assist you more effectively, please include:
        </p>
        <ul class="list-disc list-inside text-gray-700 dark:text-gray-300 mb-4 ml-4">
          <li><strong>Tool name</strong> - If your message is about a specific tool</li>
          <li><strong>Browser and device</strong> - For technical issues</li>
          <li><strong>Steps to reproduce</strong> - For bug reports</li>
          <li><strong>Expected vs actual behavior</strong> - What you expected vs what happened</li>
          <li><strong>Use case details</strong> - For feature requests</li>
        </ul>
      </section>

      <section class="mb-8">
        <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-4">Company Information</h2>
        <div class="bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-6">
          <p class="text-gray-700 dark:text-gray-300 mb-2">
            <strong>Legal Entity:</strong> Z MARIN, obrt za usluge
          </p>
          <p class="text-gray-700 dark:text-gray-300 mb-2">
            <strong>Address:</strong> Kijevska 5, Split, Croatia, EU
          </p>
          <p class="text-gray-700 dark:text-gray-300 mb-2">
            <strong>Registration:</strong> MBS 98472739
          </p>
          <p class="text-gray-700 dark:text-gray-300">
            <strong>VAT ID:</strong> Available upon request for business inquiries
          </p>
        </div>
      </section>

      <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-6 mt-12">
        <h3 class="text-lg font-medium text-blue-900 dark:text-blue-100 mb-2">
          üìß We Value Your Privacy
        </h3>
        <p class="text-blue-800 dark:text-blue-200 text-sm">
          When you contact us, we only use your email address to respond to your message. We don't add you to mailing lists or share your information with third parties. Your privacy matters to us as much as it does to you.
        </p>
      </div>
    </div>
  </div>
</BaseLayout>